<% @posts.each do |post| %>
  <a href="<%= post_path(post) %>">
    <div class="post">
      <h2><%= post.title %></h2>

      <p>投稿者<%= post.user.username %></p>
      
      <p>ブランド名:<%= post.brand.name %></p>

      <p>ギターシェイプ:<%= post.shape.name %></p>

      <p>カラー：<%= post.color.name %></p>
    </div>
  </a>
<% end %>