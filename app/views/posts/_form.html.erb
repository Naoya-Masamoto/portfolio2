<%= form_with(model: @post, local: true) do |f| %>
 
  <div class="field">
    <%= f.label :タイトル %></br>
    <%= f.text_field :title%>
  </div>

  <div class="field">
    <%= f.label :ギターブランド %></br>
    <%= f.collection_select :brand_id, Brand.all, :id, :name, {:include_blank => 'ブランド選択'}, {class: "js-brand-select"} %>
  </div>
  
  <div class="field">
    <%= f.label :ギターシェイプ %></br>
    <%= f.collection_select :shape_id, Shape.all, :id, :name, {:include_blank => 'シェイプ選択'} %>
  </div>

  <div class="field">
    <%= f.label :カラー %></br>
    <div class="color-selector">
      <% Color.all.each do |color| %>
        <label>
          <%= f.radio_button :color_id, color.id, checked: (@post.color_id == color.id) %>
          <%= color_icon_url(color.code) %>
          <%= color.name %>
        </label>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :画像 %></br>
    <%= f.file_field :img %>
    
  </div>

  <div class="field">
    <%= f.label :動画 %></br>
    <%= f.file_field :video %>
  </div>

  <div class="field">
    <%= f.label :本文 %></br>
    <%= f.text_area :body %>
  </div>
  
  <%= f.submit '投稿' %>
<% end %>