<% if user_signed_in? %>
  <%= form_with model: [@post, @comment], local: true do |form| %>
    <%= form.text_area :body, placeholder: "コメントする", rows: "2" %></br>
    <%= form.submit "コメント" %>
  <% end %>
<% else %>
  <strong><%= link_to "コメントの投稿には新規登録", new_user_registration_path %>/<%= link_to "ログインが必要です", new_user_session_path %></strong>
<% end %>