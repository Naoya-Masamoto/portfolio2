<% if user_signed_in? %>
  <div class="post-like">
    <% if post.liked_by(current_user).blank? %>
      <%= link_to post_likes_path(post), method: :post, remote: true, class: "btn btn-success btn-sm like-btn" do %>
        <i class="far fa-star"></i>
      <% end %>
    <% else %>
      <%= link_to post_like_path(post, post.liked_by(current_user)), method: :delete, remote: true, class: "btn btn-success btn-sm like-btn" do %>
        <i class="fas fa-star"></i>
      <% end %>
    <% end %>
    <p><%= post.likes.count %></p>
  </div>
<% end %>
