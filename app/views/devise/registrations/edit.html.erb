<h2>ユーザー編集</h2>

  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ユーザーネーム %></br >
      <%= f.text_field :username %>
    </div>
  
    <div class="field">
      <%= f.label :email %></br >
      <%= f.email_field :email %>
    </div>  
    
    <div class="field">
      <%= f.label :プロフィール %></br >
      <%= f.text_area :profile %>
    </div>
    
    <div class="field">
      <%= f.label :メインギター %></br >
      <%= f.text_field :guitar_name %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード %></br >
      <%= f.password_field :password %>
    </div>
  
    <div class="field">
      <%= f.label :"パスワード(確認)" %></br >
      <%= f.password_field :password_confirmation %>
    </div>
  
    <div class="field">
      <%= f.label :アイコン %></br >
      <%= image_tag @user.profile_image.url, size: "200x200" if @user.profile_image? %></br >
      <%= f.file_field :profile_image %>
    </div>
   
    <%= f.submit "編集" %>
  <% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
