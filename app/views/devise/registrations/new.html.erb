<div class="container sign_in">
    <div class="left-side">
    </div>

    <div class="right-side">
      <form>
        <h2>ユーザー登録</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :ユーザーネーム %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "&#xf002; ユーザー名" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>

          <div class="field">
            <%= f.label :"パスワード(6文字以上)" %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)" %>
          </div>

          <div class="field">
            <%= f.label :パスワード（確認） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認)" %>
          </div>

          <div class="actions">
            <%= f.submit "登録" %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
      </form>
    </div>
</div>